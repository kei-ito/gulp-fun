{
    "name": "gulp-fun",
    "version": "1.0.0",
    "description": "Create a transform stream from sync/async function.",
    "author": {
        "name": "Kei Ito",
        "email": "kei.itof@gmail.com",
        "url": "https://github.com/kei-ito"
    },
    "license": "Apache-2.0",
    "engines": {
        "node": ">=6"
    },
    "repository": "kei-ito/gulp-fun",
    "main": "lib/index.js",
    "files": [
        "lib"
    ],
    "scripts": {
        "lint": "eslint src/**/*.ts",
        "build": "tsc",
        "test": "ava -v"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@nlib/lint": "3.10.0",
        "@types/node": "^12.0.5",
        "@types/vinyl": "^2.0.3",
        "@types/vinyl-fs": "^2.4.11",
        "@typescript-eslint/eslint-plugin": "^1.9.0",
        "ava": "^2.0.0",
        "eslint": "5.16.0",
        "ts-node": "^8.2.0",
        "typescript": "3.5.1",
        "vinyl-fs": "3.0.3"
    },
    "ava": {
        "compileEnhancements": false,
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "files": [
            "lib/**/*.test.js"
        ]
    },
    "eslintConfig": {
        "extends": "./node_modules/@nlib/lint/.eslintrc.json",
        "env": {
            "es6": true,
            "node": true
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ]
    },
    "renovate": {
        "extends": [
            ":ignoreModulesAndTests",
            ":unpublishSafe",
            ":semanticPrefixChore",
            ":prNotPending",
            ":prConcurrentLimit10",
            ":prHourlyLimitNone",
            ":label(dependencies)",
            ":automergeMinor"
        ]
    }
}
